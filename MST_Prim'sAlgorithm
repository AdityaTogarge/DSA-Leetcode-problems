// MST using Prims Algorithm

//An MST (Minimum Spanning Tree) is a subset of edges from a connected, undirected, weighted graph that:

// ✔ connects all vertices
// ✔ has no cycles
// ✔ uses the minimum possible total edge weight

// The result is a tree (no cycles) that spans all vertices with minimum cost.

#include <bits/stdc++.h> 
vector<pair<pair<int, int>, int>> calculatePrimsMST(int n, int m, vector<pair<pair<int, int>, int>> &g)
{
    // Write your code here.
    unordered_map<int,list<pair<int,int>>> adj;

    for(int i=0;i<g.size();i++)
    {
        int u=g[i].first.first;
        int v=g[i].first.second;
        int w=g[i].second;

        adj[u].push_back({v,w});
        adj[v].push_back({u,w});


    }

    vector<int> key(n+1,INT_MAX);
    vector<bool> MST(n+1,false);
    vector<int> parent(n+1,-1);


    priority_queue<pair<int, int>, vector<pair<int, int>>, greater<pair<int, int>>> pq;

    key[1] = 0;
    pq.push({0, 1});
    
    while(!pq.empty())
    {
        int u = pq.top().second;
        pq.pop();

        if (MST[u]) continue; 
        
        MST[u] = true;
        


        for(auto it:adj[u])
        {
            int v=it.first;
            int w=it.second;
            if(MST[v] == false && w<key[v])
            {
                key[v]=w;
                parent[v]=u;
                pq.push({key[v], v});
            }
        }
    }
    vector<pair<pair<int, int>, int>> res;
    for(int i=2;i<=n;i++)
    {
        res.push_back({{parent[i],i},key[i]});
    }

    return res;

}
